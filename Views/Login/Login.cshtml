@model WebApplication3.Models.UserList
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Login";
     ViewBag.UserId = @HttpContextAccessor.HttpContext.Session.GetString("UserId");
}
 
<h1>Login</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <select asp-for="Role" class="form-control" >
                    <option selected>Role</option>
    <option >Admin</option>  
     <option >User</option>
</select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="FName" class="control-label"></label>*@First Name
                <input asp-for="FName" class="form-control" />
                <span asp-validation-for="FName" class="text-danger"></span>
           </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
                  <a asp-action="Registration">New User?</a>
            </div>
        </form>
    </div>
</div>



